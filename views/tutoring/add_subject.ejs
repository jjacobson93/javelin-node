<div class="add-subject-modal">
	<div class="modal-header">
		<h3 class="modal-title">Add Subject</h3>
	</div>
	<div class="modal-body">
		<div class="form-group">
			<label>Subject Title</label>
			<input class="form-control" ng-model="subject.title" placeholder="Subject Title">
		</div>
		<div class="form-group">
			<label>Department <small>not required</small></label>
			<input type="hidden" ui-select2="departmentSelect" ng-model="subject.department" style="width:100%">
		</div>
	</div>
	<div class="modal-footer">
		<button class="btn" ng-click="cancel()">Cancel</button>
		<button class="btn btn-green" ng-click="done()">Add Subject</button>
	</div>
</div>