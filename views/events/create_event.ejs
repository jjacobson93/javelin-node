<div class="create-event-modal">
	<div class="modal-header">
		<h3 class="modal-title">Create Event</h3>
	</div>
	<div class="modal-body">
		<div class="row">
			<div class="col-xs-12">
				<div class="form-group">
					<label>Event Title</label>
					<input class="form-control" ng-model="newEvent.title" placeholder="Event Title">
				</div>
				<div class="form-group">
					<label>Start</label>
					<div class="input-group" datetimepicker ng-model="newEvent.start" max-date="newEvent.end">
						<input type="text" class="form-control" placeholder="Start Time">
						<span class="input-group-btn">
							<button class="btn btn-blue">
								<span class="fa fa-calendar"></span>
							</button>
						</span>
					</div>
				</div>
				<div class="form-group">
					<label>End</label>
					<div class="input-group" datetimepicker ng-model="newEvent.end" min-date="newEvent.start">
						<input type="text" class="form-control" placeholder="End Time">
						<span class="input-group-btn">
							<button class="btn btn-blue">
								<span class="fa fa-calendar"></span>
							</button>
						</span>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button class="btn" ng-click="cancel()">Cancel</button>
		<button class="btn btn-green" ng-click="done()" ng-disabled="!newEvent.title || !newEvent.start || !newEvent.end">Create Event</button>
	</div>
</div>