<div class="create-crew-modal">
	<div class="modal-header">
		<h3 class="modal-title">Create Crew</h3>
	</div>
	<div class="modal-body">
		<div class="row">
			<div class="col-xs-12">
				<div class="form-group">
					<label>Room</label>
					<input class="form-control" ng-model="crew.room" placeholder="Room">
				</div>
				<div class="form-group">
					<label>Add People</label>
					<input type="hidden" ui-select2="addPeopleSelectOptions" ng-model="crew.people" multiple style="width:100%">
				</div>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button class="btn" ng-click="cancel()">Cancel</button>
		<button class="btn btn-green" ng-click="done()">Create Crew</button>
	</div>
</div>